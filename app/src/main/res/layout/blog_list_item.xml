<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
android:maxHeight="190dp"

    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/blog_img_view"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
       />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">
    <TextView
        fontPath="fonts/quicksandBold.ttf"
        android:textSize="16sp"
        android:text="Title"
        android:textAllCaps="true"
        android:padding="2dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blog_title"/>

        <TextView
            fontPath="fonts/fontinSansIb.otf"
            android:textSize="12sp"
            android:text="Title"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_subheading_text"/>



     <TextView
         fontPath="fonts/fontinSansRb.otf"
         android:textSize="12sp"
         android:text="This is a short summary of the article to be posted."
         android:padding="2dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/blog_text"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>