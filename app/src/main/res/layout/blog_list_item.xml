<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
android:minHeight="190dp"

    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <ImageView
        android:src="@drawable/scenery"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="80dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">
    <TextView
        fontPath="fonts/latoBlack.ttf"
        android:textSize="20sp"
        android:text="Title"
        android:textAllCaps="true"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blog_title"/>

        <TextView
            fontPath="fonts/latolight.ttf"
            android:textSize="12sp"
            android:text="Title"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_subheading_text"/>
        <TextView
            fontPath="fonts/latoBold.ttf"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="Title"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_author"/>
    <TextView
        fontPath="fonts/latoBlack.ttf"
        android:textSize="12sp"
        android:text="Title"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blog_category"/>

     <TextView
         fontPath="fonts/latoThin.ttf"
         android:textAllCaps="true"
         android:textSize="8sp"
         android:text="Title"
         android:padding="2dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/blog_date"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>